{
  "type": "system/SIMOS/Blueprint",
  "name": "StorageAttribute",
  "description": "This describes a storage recipe attribute",
  "attributes": [
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "name",
      "default": "root",
      "description": "Which attribute this StorageAttribute applies to. 'root' for the entire entity."
    },
    {
      "name": "type",
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "default": "system/SIMOS/StorageAttribute"
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "dataType",
      "default": "default",
      "enumType": "system/SIMOS/enums/StorageTypes",
      "description": "Will be used to decide in which repository the data will be stored"
    },
    {
      "name": "label",
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "optional": true,
      "default": "",
      "description": "Friendly name visible to user"
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "description",
      "default": "",
      "optional": true,
      "description": "Description for the StoreAttribute"
    },
    {
      "attributeType": "boolean",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "contained",
      "optional": true,
      "default": "true",
      "description": "WARNING: Change how the entity is stored. Changing this value will make current entities unavailable"
    }
  ],
  "storageRecipes": [],
  "uiRecipes": [
    {
      "plugin": "EDIT_PLUGIN",
      "name": "Edit",
      "type": "system/SIMOS/UiRecipe",
      "attributes": [
        {
          "name": "type",
          "attributeType": "string",
          "type": "system/SIMOS/BlueprintAttribute",
          "required": true,
          "disabled": true
        },
        {
          "name": "name",
          "attributeType": "string",
          "type": "system/SIMOS/BlueprintAttribute",
          "required": true
        },
        {
          "name": "label",
          "attributeType": "string",
          "type": "system/SIMOS/BlueprintAttribute",
          "field": "hidden"
        }
      ]
    }
  ]
}
